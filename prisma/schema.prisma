generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  // directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}


model Evidence {
  id        String   @default(cuid()) @id
  date      DateTime @default(now())
  title     String
  fileUrl   String   @default("")
  option    Option  @relation(fields: [actCode, parcelId], references: [actionCode, parcelId])
  actCode   String
  parcelId  String
}

model Action {
  code      String   @id
  name      String
  govUrl    String
  options   Option[]
}

model LandParcel {
  id        String   @id
  name      String   
  options   Option[]
}

model Option {
  action      Action      @relation(fields: [actionCode], references: [code])
  actionCode  String      
  parcel      LandParcel  @relation(fields: [parcelId], references: [id])
  parcelId    String      
  evidences   Evidence[]
  @@id([actionCode, parcelId])
}