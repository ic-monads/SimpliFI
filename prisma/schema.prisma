generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  // directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}


model Evidence {
  id        String   @default(cuid()) @id
  date      DateTime @default(now())
  title     String
  notes     String   @default("")
  fileUrl   String
  option    Option   @relation(fields: [actCode, parcelId], references: [actionCode, parcelId])
  actCode   String
  parcelId  String
  task      Task?    @relation(fields: [taskId], references: [id])
  taskId    String?
  required  RequiredEvidence?
}


model RequiredEvidence {
  id        String   @default(cuid()) @id
  title     String
  desc      String
  evidence  Evidence? @relation(fields: [evId], references: [id])
  evId      String? @unique
  task      Task @relation(fields: [taskId], references: [id])
  taskId    String
}

model Action {
  code      String   @id
  name      String
  govUrl    String
  options   Option[]
}

model LandParcel {
  id        String   @id
  name      String   
  options   Option[]
}

model Task {
  id          String    @default(cuid()) @id
  deadline    DateTime
  title       String
  description String
  completed   Boolean   @default(false)
  option      Option    @relation(fields: [actCode, parcelId], references: [actionCode, parcelId])
  actCode     String
  parcelId    String
  evidences   Evidence[] 
  requiredEvidences RequiredEvidence[]
}

model Option {
  action      Action      @relation(fields: [actionCode], references: [code])
  actionCode  String      
  parcel      LandParcel  @relation(fields: [parcelId], references: [id])
  parcelId    String      
  evidences   Evidence[]
  tasks       Task[]
  @@id([actionCode, parcelId])
}